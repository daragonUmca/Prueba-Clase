@model List<ProyectoReservaciones.Models.BitacoraModel>
@{
    ViewBag.Title = "Lista de acciones realizadas";
    Layout = null;
}

<h2>@ViewBag.Title</h2>

<div class="col-md-12">

    <table class="table table-responsive table-striped">
        <thead>
            <tr>
                <th>@Html.LabelFor(Model => Model[0].fechaAccion)</th>
                <th>@Html.LabelFor(Model => Model[0].accion)</th>
                <th>@Html.LabelFor(Model => Model[0].persona)</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Html.DisplayFor(Model => Model[i].fechaAccion)</td>
                    <td>@Html.DisplayFor(Model => Model[i].accion)</td>
                    <td>@Html.DisplayFor(Model => Model[i].persona)</td>
                </tr>
            }
        </tbody>
    </table>
</div>



